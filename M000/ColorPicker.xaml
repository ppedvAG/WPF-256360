<Window x:Class="M000.ColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:M000"
        Title="ColorPicker" Height="300" Width="300"
		WindowStartupLocation="CenterScreen" Topmost="True">
    <StackPanel Margin="10">
		<DockPanel Margin="0, 0, 0, 5">
			<TextBlock Text="R: " Foreground="Red" DockPanel.Dock="Left" Width="30" TextAlignment="Center"/>
			<TextBox Text="{Binding ElementName=RSlider, Path=Value}" DockPanel.Dock="Right" Width="30" TextAlignment="Center"/>
			<Slider Minimum="0" Maximum="255" Name="RSlider" TickFrequency="1" IsSnapToTickEnabled="True"/>
		</DockPanel>
		<DockPanel Margin="0, 0, 0, 5">
			<TextBlock Text="G: " Foreground="Green" DockPanel.Dock="Left" Width="30" TextAlignment="Center"/>
			<TextBox Text="{Binding ElementName=GSlider, Path=Value}" DockPanel.Dock="Right" Width="30" TextAlignment="Center"/>
			<Slider Minimum="0" Maximum="255" Name="GSlider" TickFrequency="1" IsSnapToTickEnabled="True"/>
		</DockPanel>
		<DockPanel Margin="0, 0, 0, 5">
			<TextBlock Text="B: " Foreground="Blue" DockPanel.Dock="Left" Width="30" TextAlignment="Center"/>
			<TextBox Text="{Binding ElementName=BSlider, Path=Value}" DockPanel.Dock="Right" Width="30" TextAlignment="Center"/>
			<Slider Minimum="0" Maximum="255" Name="BSlider" TickFrequency="1" IsSnapToTickEnabled="True"/>
		</DockPanel>
		<DockPanel Margin="0, 0, 0, 5">
			<TextBlock Text="A: " Foreground="Black" DockPanel.Dock="Left" Width="30" TextAlignment="Center"/>
			<TextBox Text="{Binding ElementName=ASlider, Path=Value}" DockPanel.Dock="Right" Width="30" TextAlignment="Center"/>
			<Slider Minimum="0" Maximum="255" Name="ASlider" TickFrequency="1" IsSnapToTickEnabled="True"/>
		</DockPanel>
		<TextBlock Text="{Binding ElementName=ColorRect, Path=Fill, StringFormat='Picked color: {0}'}" TextAlignment="Center"/>
		<Rectangle Stroke="Black" StrokeThickness="2" Width="100" Height="100" Name="ColorRect">
			<Rectangle.Fill>
				<MultiBinding>
					<Binding ElementName="RSlider" Path="Value"/>
					<Binding ElementName="GSlider" Path="Value"/>
					<Binding ElementName="BSlider" Path="Value"/>
					<Binding ElementName="ASlider" Path="Value"/>
					<MultiBinding.Converter>
						<local:FourValueToBrushConverter/>
					</MultiBinding.Converter>
				</MultiBinding>
			</Rectangle.Fill>
		</Rectangle>
	</StackPanel>
</Window>
