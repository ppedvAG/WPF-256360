<Window x:Class="M013.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="clr-namespace:M013.ViewModel"
        xmlns:local="clr-namespace:M013"
        Title="MainWindow" Height="450" Width="800">
	<Window.DataContext>
		<vm:MainWindowViewModel/>
	</Window.DataContext>
	
	<!--MVVM-->
	<!--Strikte Trennung von Backend und Frontend-->
	<!--MainWindow.xaml.cs wird nicht mehr verwendet-->

	<!--3 Schritte-->
	<!--1. Ordnerstruktur herstellen-->
	<!--2. Bestehende Dateien in ihre entsprechenden Ordner bewegen-->
	<!--2.1. Namespaces korrekt anpassen (x:Class, MainWindow.xaml.cs, App.xaml)-->
	<!--3. ViewModels anlegen-->
	<!--3.1. DataContext auf diese neue Klasse setzen-->
		
	<!--DataGrid Modul umbauen, MVVM Toolkit, Page basierte Navigation-->
	<ContentPresenter Content="{Binding CurrentPage}"/>
</Window>
