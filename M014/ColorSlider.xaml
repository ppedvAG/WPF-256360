<UserControl x:Class="M014.ColorSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="clr-namespace:M014"
			 Name="Self">
	<!--WICHTIG: Niemals DataContext setzen-->
	<!--Lösung: ElementName verwenden (Name=Self, ElementName + Path)-->
	<UserControl.Resources>
		<local:ColorToBrushConverter x:Key="CBC"/>
	</UserControl.Resources>
	<DockPanel Margin="0, 0, 0, 5">
		<TextBlock Text="{Binding ElementName=Self, Path=Text}" Foreground="{Binding ElementName=Self, Path=TextColor, Converter={StaticResource CBC}}" DockPanel.Dock="Left" Width="30" TextAlignment="Center"/>
		<TextBox Text="{Binding ElementName=TheSlider, Path=Value}" DockPanel.Dock="Right" Width="30" TextAlignment="Center"/>
		<Slider Minimum="0" Maximum="255" Value="{Binding ElementName=Self, Path=SliderValue}" Name="TheSlider" TickFrequency="1" IsSnapToTickEnabled="True"/>
	</DockPanel>
</UserControl>
